{
  "builders": [
    {
      "boot_command": [
        "<up>",
        "<tab>",
        "<wait>",
        "<spacebar>",
        "inst.cmdline net.ifnames=0 biosdevname=0 inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `ks_path` }}",
        "<enter>",
        "<wait>"
      ],
      "boot_wait": "5s",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "disk_type_id": 0,
      "format": "ovf",
      "guest_os_type": "rhel8-64",
      "headless": "{{ user `headless` }}",
      "http_directory": "{{user `http_directory`}}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/packer-{{ user `template`}}-vmware",
      "shutdown_command": "sudo -S /sbin/halt -h -p",
      "ssh_password": "root",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "root",
      "type": "vmware-iso",
      "vm_name": "{{ user `template` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1"
      },
      "vmx_remove_ethernet_interfaces": true
    }
  ],
  "provisioners": [
    {
      "expect_disconnect": true,
      "scripts": [
        "{{template_dir}}/../_common/sshd.sh",
        "{{template_dir}}/../_common/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "arch": "64",
    "box_basename": "rhel-8.3",
    "build_directory": "../../builds",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "cd_files": "{{template_dir}}/http/ks.cfg",
    "cpus": "2",
    "disk_size": "65536",
    "headless": "false",
    "http_directory": "{{template_dir}}/http",
    "iso_checksum": "30fd8dff2d29a384bd97886fa826fa5be872213c81e853eae3f9d9674f720ad0",
    "iso_url": "../isos/rhel-8.3-x86_64-dvd.iso",
    "ks_path": "ks.cfg",
    "memory": "2048",
    "name": "rhel-8.3",
    "template": "rhel-8.3-x86_64",
    "version": "TIMESTAMP"
  }
}

